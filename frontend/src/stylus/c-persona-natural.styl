@import 'layout.styl'

@font-face {font-family:"Evogria Italic";
    src:url("../fonts/Evogria_Italic.eot?") format("eot"),
    url("../fonts/Evogria_Italic.woff") format("woff"),
    url("../fonts/Evogria_Italic.ttf") format("truetype"),
    url("../fonts/Evogria_Italic.svg#Evogria-Italic") format("svg");
    font-weight:normal;
    font-style:normal;}

.announcement-container
    max-width 320px
    width 100%
    display flex
    justify-content center

.center-box 
    width 80%
    display flex
    
.announcement-header
    width 100%

.form-announcement-simple
    padding 10px
    background-color white
    width 100%
    border-radius 5px
    margin-bottom 5px

.form-announcement__title
    width 100%
    text-align center
    display block
    color #848484
    font-size 20px
    margin-bottom 5px

.form-announcement__price
    width 100%
    text-align center
    display block
    color #e37d00
    font-family:"Evogria Italic"
    font-size 25px
    margin-bottom 5px

span
    display block
    width 100%
    text-align center
    margin-bottom 5px

.form-announcement__impost
    font-family:"Evogria Italic"
    color #848484
    font-size 12px
    margin-bottom 5px

.form-announcement__button
    background-color #e37d00
    color white
    display block
    padding 5px
    font-family:"Evogria Italic"
    border-radius 3px
    margin-bottom 5px

.form-announcement__example
    color #e37d00
    text-decoration underline
    margin-bottom 5px
    font-size 15px

.announcement-content
    margin-top 20px

.announcement-features
    display flex
    flex-direction column
    li
        text-align center
        background-color #D8D8D8
        margin auto
        margin-bottom 10px
        border-radius 5px
        font-size 15px